<div class="syllabus__item">
  {% if category.pending_drip? %}
    <div class="media" id="category-{{ category.id }}">
      <div class="media-left">
        <div class="syllabus__img">
          {% if category.poster_image_url %}
            <img src="{{ category.poster_image_url }}" class="thumb">
          {% else %}
            <img src="{{ 'placeholder.png' | asset_url }}" class="thumb">
          {% endif %}
        </div>
      </div>
      <div class="media-body">
        <p class="syllabus__title">
          {{ category.title }}
          <span kjb-settings-id="{{ 'coming_soon' | settings_id: section: section }}">&nbsp;{{ section.settings.coming_soon }}</span>
        </p>
      </div>
    </div>
  {% else %}
    <a href="{{ category.url }}" id="category-{{ category.id }}">
      <div class="col">
        <div class="card h-100">
          <h5 class="card-header" style= "text-align:center;">{{ category.title }}</h5>          
          {% if category.poster_image_url %}
            <img class="card-img-top" src="{{ category.poster_image_url }}">
          {% else %}
            <img class="img-responsive" src="{{ 'placeholder.png' | asset_url }}">
          {% endif %}
        </div>
        <div class="card-body">
          <p class="card-text">{{ category.description }}</p>
          <a href="{{ category.url }}" class="btn btn-outline-success">カテゴリ詳細へ</a>
        </div>
      </div>
    </a>
  {% endif %}
</div>
